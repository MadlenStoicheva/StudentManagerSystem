                @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @{ if (EventManagerSystem.Web.Filters.LoginFilter.IsAdmin())
        {

 <div class="form-group">
        @Html.LabelFor(model => model.IsStudent, "Is Student", htmlAttributes: new { @class = "control-label col-md-5", @style = "color: #333; font-size:15px; " })
