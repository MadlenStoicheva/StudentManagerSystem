@model EventManagerSystem.Web.Models.StudentViewModels.CRUDStudentViewModel

@{ /**/

    ViewBag.Title = "Edit"; }

<h2 style="text-align:center; margin-top:30px; color:#333;  margin-bottom: 20px; font-size:35px;">Edit</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    @*<h4>UserEditViewModel</h4>*@
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
