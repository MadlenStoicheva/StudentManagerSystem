@model EventManagerSystem.Web.Models.PostPublicationsViewModels.CRUDPostPublicationsViewModel

@{
    ViewBag.Title = "Edit";
}

<h2 style="text-align:center;">Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <img src="@Model.ImgURL" alt="image" style="width:20%; padding-bottom:1em;" />
        @Html.LabelFor(model => model.ImgURL, "Image", htmlAttributes: new { @class = "control-label col-md-5", @style = "color: #333; font-size:15px; " })

        @Html.EditorFor(model => model.ImgURL, new { htmlAttributes = new { @class = "form-control col-md-offset-5" } })
        @Html.ValidationMessageFor(model => model.ImgURL, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-offset-5">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-offset-5">
            @Html.TextAreaFor(model => model.Content, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Teacher, "Teacher", htmlAttributes: new { @class = "control-label col-md-5", @style = "color: #333; " })
        <div class="col-md-offset">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <select name="Teacher" id="Teacher" class="form-control col-md-offset">
                    <option value="Madlen Stoycheva">Madlen Stoycheva</option>
                    <option value="Elena Dimitrova">Elena Dimitrova</option>

                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-5">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
