@model EventManagerSystem.Web.Models.PostPublicationsViewModels.PostPublicationsListViewModel

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">


<style>

    /*Until here*/
    .events-list-container {
        display: inline-flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
        padding: 20px;
    }

    .events-list .events-list-box {
        width: 100%;
        background: #fff;
        margin-bottom: 20px;
    }

    img {
        width: 100%;
        height: 323px;
    }

    .title {
        font-size: 26px;
        line-height: 1.2;
        padding-bottom: 10px;
        color: #5d5d5d;
    }

    .description {
        color: #5d5d5d;
        font-size: 16px;
    }

    .reg-btn {
        color: #fff;
        font-size: 16px;
        font-weight: 700;
        background: #26c4f4;
        width: 100%;
        border-radius: 3px;
    }
</style>

<h2 style="text-align:center;">Publications</h2>

@{ if (EventManagerSystem.Web.Filters.LoginFilter.IsUserTeacher())
    {
         <button class="btn-default" style="border-radius:15px; height:2.5em; width:10em;">                               
            @Html.ActionLink("Add New", "Create")
        </button>
        } }
        @foreach (var publication in Model.PostPublications)
        {
            <div class="events-list-container">
                <div class="events-list-box">
                    <div class="col-lg-6">
                        <a href="@Url.Action("ShowEvent", "Events", new { id = publication.Id }, null)">

                            <img src="@publication.ImgURL" alt="image" />
                        </a>
                    </div>
                    <div class="info col-lg-6 " style="text-align:justify; padding-left:2%">
                        <div class="title">
                            @publication.Title
                        </div>
                        <div class="Content">
                            <span>Content:</span>
                            <span class="content">
                                @publication.Content
                            </span>
                            <br />
                            <br />
                            <span><b>Teacher:</b></span>
                            <span class="teacher">
                                <b> @publication.Teacher </b>
                            </span>
                        </div>

                        <br />

                        <div>
                            <button class="btn-default" style="border-radius:15px; height:2.5em; width:30%;">
                                @Html.ActionLink("Read", "Show", "PostPublications", new { id = publication.Id }, null)
                            </button>

                            @{ if (EventManagerSystem.Web.Filters.LoginFilter.IsUserTeacher())
                                {
                                    <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                                        @Html.ActionLink("Edit", "Edit", "PostPublications", new { id = publication.Id }, null)
                                    </button>
                                    <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                                        @Html.ActionLink("Delete", "Delete", "PostPublications", new { id = publication.Id }, null)
                                    </button> } }
                        </div>

                    </div>


                </div>
                <br />


            </div>}
