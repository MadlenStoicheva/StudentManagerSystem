@model EventManagerSystem.Web.Models.WeeklyClassesViewModels.WeeklyclassesListViewModel
@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">


<style>
    /*Until here*/
    .events-list-container {
        display: inline-flex;
        justify-content: space-between;
        flex-wrap: wrap;
        margin: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
        padding: 20px;
    }

    .events-list .events-list-box {
        width: 500px;
        background: #fff;
        float: left;
        margin-bottom: 20px;
        height: 520px;
        position: relative;
    }

    img {
        width: 491px;
        height: 323px;
    }

    .title {
        font-size: 26px;
        line-height: 1.2;
        padding-bottom: 10px;
        color: #5d5d5d;
    }

    .description {
        color: #5d5d5d;
        font-size: 16px;
    }

    .reg-btn {
        color: #fff;
        font-size: 16px;
        font-weight: 700;
        background: #26c4f4;
        width: 100%;
        border-radius: 3px;
    }
</style>

@{ if (EventManagerSystem.Web.Filters.LoginFilter.IsUserTeacher())
                {
        <br/>
        <br/>
                    <button class="btn-default" style="border-radius:15px; height:2.5em; width:10em;">
                        @Html.ActionLink("Create New", "Create")
                    </button>

                } }
<br />
<br />
@foreach (var weeklyClasses in Model.WeeklyClasses)
{
<div class="events-list-container">
    <div class="events-list-box">

        <a href="@Url.Action("ShowEvent", "Events", new { id = weeklyClasses.Id }, null)"><img src="@weeklyClasses.ImgURL" alt="image" /></a>
        <div class="info">

            <div class="title">
                @weeklyClasses.Title
            </div>

            <br />
           
            <span class="organizer">
                @weeklyClasses.Content
            </span>
            <br />
            <br/>
            <span>Files:</span>
            <a href="@weeklyClasses.FilesURL">Files</a>
            <br />
            <span>Meeting:</span>
            <a href="@weeklyClasses.MeetingURL">Meeting</a>
            <br />
            <br />
            <span>Teacher:</span>
            <span class="organizer">
                @weeklyClasses.Teacher
            </span>
            <br />
        </div>
        <br />

        <div>
            <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                @Html.ActionLink("Read", "Show", "WeeklyClasses", new { id = weeklyClasses.Id }, null)
            </button>

            @{ if (EventManagerSystem.Web.Filters.LoginFilter.IsUserTeacher())
                {
                <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                     @Html.ActionLink("Edit", "Edit", "WeeklyClasses", new { id = weeklyClasses.Id }, null)
                </button>
                    <button class="btn-default" style="border-radius:15px; height:2.5em; width:5em;">
                        @Html.ActionLink("Delete", "Delete", "WeeklyClasses", new { id = weeklyClasses.Id }, null)
                </button> } }
        </div>

        <br />
    </div>
</div>}